<div class="flash_message">
  <% flash.each do |key, value| %>
    <%= content_tag(:div, value, class: "#{key}") %>
  <% end %>
</div>

<h3><%= t('activerecord.models.user')+t('view.edit') %></h3>


<%= form_with(model: [:admin, @user], locale: true) do |f| %>

  <div class="">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="">
  <%= f.label :email %>
  <%= f.text_field :email %>
  </div>

  <div class="">
  <%= f.label :password %>
  <%= f.text_field :password %>
  </div>

  <div class="">
  <%= f.label :admin %>
  <%= f.check_box :admin %>
  管理者権限
  </div>

  <div class="">
  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>
  </div>

  <div class="">
  <%= f.submit t('view.update'), id:"update", class:'update' %>
  </div>

<% end %>

<p class="to_other_page">
  <%= link_to t('view.admin'), admin_users_path %></p>
