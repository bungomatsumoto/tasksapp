<%= form_with(model: @task, local: true ) do |f| %>

  <% if @task.errors.any? %>
    <div id="error_explanation">
      <% @task.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>

  <div class="task_title">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>

  <div class="task_explanation">
    <%= f.label :explanation %><br>
    <%= f.text_area :explanation %>
  </div>

  <div class="task_deadline">
    <%= f.label :deadline %><br>
    <%= f.text_field :deadline %>
  </div>

  <div class="task_status">
    <%= f.label :status %><br>
    <%= f.select :status, Task.statuses.map { |k, v| [t("enums.task.status.#{k}"), v] }  %>
  </div>

  <div class="button">
    <p><%= f.submit %></p>
  </div>
<% end %>
