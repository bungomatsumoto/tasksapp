<h3><%= t('view.signup') %></h3>


<%= form_with(model: @user, local: true) do |f| %>

<% if @user.errors.any? %>
<div id="error_explanation">
  <h3><%= pluralize(@user.errors.count, "") %><%= t('view.cannot_save') %> </h3>
  <% @user.errors.full_messages.each do |message| %>
  <p><%= message %></p>
  <% end %>
</div>
<% end %>

  <div class="">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="">
  <%= f.label :email %>
  <%= f.text_field :email %>
  </div>

  <div class="">
  <%= f.label :password %>
  <%= f.text_field :password %>
  </div>

  <div class="">
  <%= f.label :password_confirmation %>
  <%= f.text_field :password_confirmation %>
  </div>

  <div class="">
  <%= f.submit t('view.create my account') %>
  </div>

<% end %>
